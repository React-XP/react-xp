{
  "name": "@react-xp/react-xp",
  "description": "This is a React.js monorepo with a set of experience components",
  "type": "module",
  "author": {
    "email": "fabio7maia@gmail.com",
    "name": "FÃ¡bio Maia"
  },
  "version": "0.0.0",
  "workspaces": ["src/apps/*", "src/packages/*"],
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "build": "pnpm -r run build",
    "build:packages": "pnpm --filter \"./src/packages/**\" run build",
    "build:package-core": "pnpm --filter \"./src/packages/core/**\" run build",
    "build:package-theme": "pnpm --filter \"./src/packages/theme/**\" run build",
    "build:package-ui": "pnpm --filter \"./src/packages/ui/**\" run build",
    "dev": "pnpm -r run dev",
    "dev:packages": "pnpm --filter \"./src/packages/**\" run dev",
    "dev:docs": "pnpm --filter \"./src/apps/docs\" run storybook",
    "start:docs": "pnpm --filter \"./src/apps/docs/**\" run dev",
    "dev:ui-builder": "pnpm run build:packages && pnpm run start:ui-builder",
    "start:ui-builder": "pnpm --filter \"./src/apps/ui-builder/**\" run dev",
    "check": "pnpm -r run check",
    "format": "pnpm -r run format",
    "spell:check": "cspell src/**/*.{ts,tsx}",
    "git:pre-commit": "lint-staged --no-stash",
    "git:pre-push": "pnpm run build && pnpm run test:coverage",
    "update:packages-exports": "node ./scripts/packages-update-packagejson-exports.js",
    "release": "pnpm --workspace-concurrency=1 --filter \"./src/packages/**\" run release",
    "biome:format": "biome format --write src/**/*.{js,ts,tsx}",
    "biome:lint": "biome lint --apply src/**/*.{js,ts,tsx}",
    "packages:new": "node --loader ts-node/esm ./scripts/packages-new.ts",
    "t": "node --loader ts-node/esm ./scripts/utils.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.3",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@react-xp/biome-config": "workspace:*",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.0",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@testing-library/react": "16.0.1",
    "@types/node": "20.14.2",
    "@types/react": "18.3.11",
    "@types/react-dom": "18.3.0",
    "concurrently": "^9.0.1",
    "cspell": "^8.14.4",
    "cspell-dict-en-gb": "^1.2.6",
    "cspell-dict-en_us": "^1.3.7",
    "cspell-dict-lorem-ipsum": "^1.1.2",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "rimraf": "^6.0.1",
    "stylelint": "^16.9.0",
    "stylelint-config-recommended": "^14.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  },
  "keywords": ["react", "experience", "components", "ui"],
  "repository": {
    "type": "git",
    "url": "https://github.com/React-XP/react-xp"
  },
  "private": true
}
