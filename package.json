{
  "name": "@react-xp/react-xp",
  "description": "This is a React.js monorepo with a set of experience components",
  "author": {
    "email": "fabio7maia@gmail.com",
    "name": "FÃ¡bio Maia"
  },
  "version": "0.0.0",
  "workspaces": [
    "src/apps/*",
    "src/packages/*"
  ],
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "build": "npx lerna run build",
    "dev": "npx lerna run dev",
    "check": "npx lerna run check",
    "format": "npx lerna run format",
    "lint:errors": "eslint --quiet src/**/*.{ts,tsx}",
    "lint:fix": "eslint --fix src/**/*.{ts,tsx}",
    "lint:css": "stylelint ./src/**/*.{ts,tsx}",
    "prettier-format-all": "prettier --write src/**/*.{json,ts,tsx}",
    "lint:all": "yarn run lint:errors && yarn run spell:check && yarn run lint:css",
    "spell:check": "cspell src/**/*.{ts,tsx}",
    "git:pre-commit": "lint-staged --no-stash --allow-empty",
    "git:pre-push": "yarn run build && yarn run test:coverage"
  },
  "private": true,
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.1",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.0.6",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.0",
    "@testing-library/react": "16.0.0",
    "@types/node": "20.14.2",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "cspell": "^8.8.4",
    "cspell-dict-en-gb": "^1.2.6",
    "cspell-dict-en_us": "^1.3.7",
    "cspell-dict-lorem-ipsum": "^1.1.2",
    "eslint": "~8.48.0",
    "husky": "^9.0.11",
    "lerna": "^8.1.3",
    "lint-staged": "^15.2.7",
    "rimraf": "^5.0.7",
    "stylelint": "^16.6.1",
    "stylelint-config-recommended": "^14.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
