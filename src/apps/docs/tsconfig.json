{
  "extends": "../../../tsconfig.paths.json",
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./src",
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "composite": true
  },
  "include": ["src"],
  "references": [
    {
      "path": "../../packages/core"
    },
    {
      "path": "../../packages/theme"
    },
    {
      "path": "../../packages/ui"
    }
  ]
}
