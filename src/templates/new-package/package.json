{
  "name": "@react-xp/<package-name>",
  "description": "This is a React Experience <package-name> package",
  "version": "0.0.0",
  "publishConfig": {
    "access": "public"
  },
  "files": ["dist/"],
  "scripts": {
    "build-clean": "rimraf dist && pnpm run build",
    "build": "tsc --project tsconfig.build.json && copyfiles -u 1 src/assets/**/*.css dist",
    "check": "biome check --write",
    "dev": "nodemon --watch src --exec 'pnpm run build'",
    "format": "biome format --write",
    "release": "semantic-release"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  },
  "devDependencies": {
    "@glzr/semantic-release-npm": "^1.5.0",
    "@jcoreio/semantic-release-npm": "^12.0.2",
    "@react-xp/release-config": "workspace:*",
    "@react-xp/theme": "workspace:*",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.0",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@storybook/addon-actions": "^8.3.5",
    "@storybook/react": "^8.3.5",
    "@storybook/test": "^8.3.5",
    "@types/react": "^18.3.11",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "copyfiles": "^2.4.1",
    "nodemon": "^3.1.7",
    "react": "^18.3.1",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.1.2",
    "semantic-release-monorepo": "^8.0.2",
    "typescript": "^5.6.2"
  },
  "overrides": {
    "conventional-changelog-conventionalcommits": ">= 8.0.0"
  },
  "keywords": ["react", "experience", "<package-name>"]
}
