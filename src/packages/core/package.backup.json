{
  "name": "@react-xp/core",
  "description": "This is a React Experience core utilities and logical code",
  "version": "0.0.0",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist/"
  ],
  "exports": {
    "./console": {
      "source": "./src/modules/console/index.ts",
      "default": "./dist/modules/console/index.js"
    },
    "./eventHub": {
      "source": "./src/modules/eventHub/index.ts",
      "default": "./dist/modules/eventHub/index.js"
    },
    "./tailwind": {
      "source": "./src/modules/tailwind/index.ts",
      "default": "./dist/modules/tailwind/index.js"
    },
    "./visibility": {
      "source": "./src/modules/visibility/index.ts",
      "default": "./dist/modules/visibility/index.js"
    }
  },
  "scripts": {
    "build-clean": "rimraf dist && tsc --project tsconfig.build.json",
    "build": "tsc --project tsconfig.build.json",
    "check": "biome check --write",
    "dev": "nodemon --watch src --exec 'pnpm run build'",
    "format": "biome format --write"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.1",
    "tailwind-merge": "^2.3.0",
    "zustand": "^4.5.4"
  },
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0",
    "react-dom": "^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.0",
    "@glzr/semantic-release-npm": "^1.5.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.0.6",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "nodemon": "^3.1.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^5.0.7",
    "semantic-release": "^24.0.0",
    "typescript": "^5.4.2"
  },
  "keywords": [
    "react",
    "experience",
    "components",
    "utilities"
  ]
}