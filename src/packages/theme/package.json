{
  "name": "@react-xp/theme",
  "description": "This is a React Experience theme",
  "version": "0.0.0",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist/"
  ],
  "exports": {
    "./useTheme": {
      "source": "./src/hooks/useTheme/index.ts",
      "default": "./dist/hooks/useTheme/index.js"
    },
    "./tailwind": {
      "source": "./src/modules/tailwind/index.ts",
      "default": "./dist/modules/tailwind/index.js"
    },
    "./tailwindConfig": {
      "source": "./src/modules/tailwind/tailwind.config.ts",
      "default": "./dist/modules/tailwind/tailwind.config.js"
    },
    "./themeProvider": {
      "source": "./src/providers/themeProvider/index.ts",
      "default": "./dist/providers/themeProvider/index.js"
    }
  },
  "scripts": {
    "build": "rimraf dist && tsc --project tsconfig.build.json",
    "check": "biome check --write",
    "dev": "rimraf dist && tsc --watch",
    "format": "biome format --write"
  },
  "peerDependencies": {
    "@react-xp/core": "*",
    "react": "^17.0.0 || ^18.0.0",
    "react-dom": "^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.0",
    "@glzr/semantic-release-npm": "^1.5.0",
    "@react-xp/core": "workspace:*",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.0.6",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^5.0.7",
    "semantic-release": "^24.0.0",
    "tailwindcss": "^3.4.4",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.4.2"
  },
  "keywords": [
    "react",
    "experience",
    "components",
    "theme"
  ]
}
