{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "declaration": true,
    "paths": {
      "@react-xp/core/*": [
        "../../packages/core/src/components/*",
        "../../packages/core/src/contexts/*",
        "../../packages/core/src/helpers/*",
        "../../packages/core/src/hooks/*",
        "../../packages/core/src/modules/*",
        "../../packages/core/src/providers/*",
        "../../packages/core/src/types/*"
      ],
      "@react-xp/theme/*": [
        "../../packages/theme/src/components/*",
        "../../packages/theme/src/contexts/*",
        "../../packages/theme/src/helpers/*",
        "../../packages/theme/src/hooks/*",
        "../../packages/theme/src/modules/*",
        "../../packages/theme/src/providers/*",
        "../../packages/theme/src/types/*"
      ]
    }
  },
  "references": [
    {
      "path": "../../packages/core"
    },
    {
      "path": "../../packages/theme"
    }
  ],
  "include": ["src"]
}
